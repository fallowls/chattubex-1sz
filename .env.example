# Campaign Management App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=production
PORT=5000

# Database Configuration (Required)
# For AWS RDS PostgreSQL: postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/database_name
DATABASE_URL=postgresql://username:password@host:port/database_name

# App Security (Required)
DASHBOARD_PASSWORD=your-secure-password-here
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-here-use-crypto-randomBytes-32-toString-hex

# CORS Configuration (Required for Production)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Service (Optional - for contact form functionality)
BREVO_API_KEY=your-brevo-api-key-here

# OpenAI API (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration (For AWS Deployment)
# Required for S3 file storage when FILE_STORAGE=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# File Storage Configuration
# Set to 'local' for local file storage or 's3' for AWS S3
FILE_STORAGE=local

# For Docker Compose deployments (Development)
POSTGRES_DB=campaign_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres